<UserControl x:Class="SamSoarII.Simulation.UI.Chart.VariableList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SamSoarII.Simulation.UI.Chart"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <Grid x:Name="MainGrid" Background="DarkBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="NewButton" Grid.Row="1" Grid.Column="0" MouseUp="OnNewButtonClicked">
            <Line X1="10" X2="40" Y1="20" Y2="20" Stroke="AliceBlue"  StrokeThickness="4"></Line>
            <Line X1="25" X2="25" Y1="5" Y2="35" Stroke="AliceBlue" StrokeThickness="4"></Line>
            <TextBlock Canvas.Top="6" Canvas.Left="50" FontSize="20" Foreground="AliceBlue">添加新变量</TextBlock>
        </Canvas>
    </Grid>
</UserControl>
