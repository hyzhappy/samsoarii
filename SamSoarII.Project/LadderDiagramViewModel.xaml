<UserControl x:Class="SamSoarII.Project.LadderDiagramViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SamSoarII.Project"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="3000">
    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Background="Transparent">
        <Line Stroke="Black" StrokeThickness="10" X1="0" X2="0" Y1="0" Y2="{Binding ElementName=LadderDiagramStackPanel, Path=ActualHeight}"></Line>
        <StackPanel x:Name="LadderDiagramStackPanel">
            <Border BorderThickness="2" BorderBrush="Red" Width="1500" Margin="20,0,0,20" HorizontalAlignment="Left">
                <TextBox MinHeight="60" Background="AntiqueWhite" FontSize="36">程序注释</TextBox>
            </Border>
            <StackPanel x:Name="LadderNetworkStackPanel" HorizontalAlignment="Left">

            </StackPanel>
        </StackPanel>
        <Line Stroke="Black" StrokeThickness="10" X1="0" X2="0" Y1="0" Y2="{Binding ElementName=LadderDiagramStackPanel, Path=ActualHeight}"></Line>
    </StackPanel>

</UserControl>
