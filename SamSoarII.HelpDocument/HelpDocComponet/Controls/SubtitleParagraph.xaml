             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SamSoarII.HelpDocument.HelpDocComponet.Controls"
             mc:Ignorable="d" x:Name="PG_Main">
    <Grid x:Name="GD_Main">
