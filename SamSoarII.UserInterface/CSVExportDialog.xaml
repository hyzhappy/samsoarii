<Window x:Class="SamSoarII.UserInterface.CSVExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamSoarII.UserInterface"
        mc:Ignorable="d"
        Title="CSVExportDialog" Height="360" Width="600" ResizeMode="NoResize">
    <Canvas>
        <Label Canvas.Top="55" Canvas.Left="89">CSV文件名</Label>
        <Label Canvas.Left="100" Canvas.Top="125">路径</Label>
        <Label Canvas.Top="195" Canvas.Left="88">分隔符选择</Label>
        <TextBox x:Name="NameTextBox" Width="121" Height="25" Canvas.Left="193" Canvas.Top="57" Padding="0,2,0,0"></TextBox>
        <TextBox x:Name="PathTextBox" Width="200" Height="25" Canvas.Left="193" Canvas.Top="125" Padding="0,2,0,0"></TextBox>
        <ComboBox x:Name="SeparatorComboBox" Canvas.Left="193" Canvas.Top="195" Width="80" Height="25" IsEditable="False" SelectedIndex="0" Padding="4,4,0,0">
            <ComboBoxItem>,(default)</ComboBoxItem>
            <ComboBoxItem>;</ComboBoxItem>
        </ComboBox>
        <Button x:Name="ExportButton" Content="导出" Height="25" Width="80" Canvas.Left="147" Canvas.Top="259"></Button>
        <Button x:Name="CancelButton" Content="取消" Height="25" Width="80" Canvas.Left="361" Canvas.Top="259"></Button>
        <Button x:Name="BrowseButton" Content="浏览" Width="80" Height="25" Canvas.Left="429" Canvas.Top="125"></Button>
    </Canvas>
</Window>
