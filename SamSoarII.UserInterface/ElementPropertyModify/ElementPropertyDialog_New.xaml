<Window x:Class="SamSoarII.UserInterface.ElementPropertyDialog_New"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamSoarII.UserInterface"
        mc:Ignorable="d"
        Title="ElementPropertyDialog_New" Height="396" Width="300">
    <Grid x:Name="GD_Main">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="8,4,200,4" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="14">
            参数描述：
        </TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="8,4,200,4"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="14">
            元件注释：
        </TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="90,4,8,4"
                   x:Name="TB_Detail"
                   VerticalAlignment="Center">
            [单字]参数(D/AI/AO/TV/CV)
        </TextBlock>
        <TextBox Grid.Row="2" Grid.Column="0" Margin="90,4,8,4"
                 x:Name="TB_Comment">
            这是一个元件
        </TextBox>
        <Button Grid.Row="3" Grid.Column="0" Margin="8,4,160,4"
                Click="OnEnsureButtonClick">
            确定
        </Button>
        <Button Grid.Row="3" Grid.Column="0" Margin="160,4,8,4"
                Click="OnCancelButtonClick">
            取消
        </Button>
    </Grid>
</Window>
