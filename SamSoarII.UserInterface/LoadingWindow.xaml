<Window x:Class="SamSoarII.UserInterface.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamSoarII.UserInterface"
        mc:Ignorable="d"
        Title="LoadingWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"  Height="160" Width="620" Background="#FFF6F6F6">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="0,10,0,0" FontSize="12" Text="{Binding Message}" TextWrapping="Wrap" HorizontalAlignment="Center" Width="580" x:Name="TB_Message"/>
        <Canvas Background="White" Grid.Row="1" HorizontalAlignment="Center" Width="580" x:Name="canvas" Height="18" VerticalAlignment="Center"/>
        <Label Grid.Row="1" Panel.ZIndex="2" Background="#FFF6F6F6" Height="19" HorizontalAlignment="Left" Width="16"/>
        <Label Grid.Row="1" Panel.ZIndex="2" Background="#FFF6F6F6" Height="19" HorizontalAlignment="Right" Width="16"/>
    </Grid>
</Window>
