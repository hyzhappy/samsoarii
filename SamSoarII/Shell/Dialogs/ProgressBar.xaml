<Window x:Class="SamSoarII.Shell.Dialogs.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamSoarII.Shell.Dialogs"
        mc:Ignorable="d" Icon="/Resources/Image/SamSoarII.ico"
        Title="ProgressBar" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Height="160" Width="620" Background="#FFF6F6F6">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="0,10,0,0" FontSize="12" Text="{Binding Message}" TextWrapping="Wrap" HorizontalAlignment="Center" Width="580" x:Name="TB_Message"/>
        <ProgressBar Background="White" Grid.Row="1" Minimum="0" Maximum="1" Value="{Binding Percentage}" HorizontalAlignment="Center" Width="580" x:Name="PG_Bar" Height="18" VerticalAlignment="Center"></ProgressBar>
    </Grid>
</Window>
