<UserControl x:Class="SamSoarII.Shell.Windows.Update.UpdateWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SamSoarII.Shell.Windows.Update"
             xmlns:properties="clr-namespace:SamSoarII.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="{x:Static properties:Resources.All_Information}"/>
            <TextBlock VerticalAlignment="Center" Text="{Binding Informations.Count}"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <ListBox x:Name="LB_Inform" Grid.Row="1" Visibility="Collapsed" ItemsSource="{Binding Informations}"/>

            <TextBlock x:Name="TB_Inform" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" Height="24" Text="{x:Static properties:Resources.No_Information}"/>
        </Grid>
    </Grid>
</UserControl>
