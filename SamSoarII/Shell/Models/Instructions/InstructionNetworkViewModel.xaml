<UserControl x:Class="SamSoarII.Shell.Models.InstructionNetworkViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SamSoarII.Shell.Models"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid x:Uid="G_Main" x:Name="G_Main">
        <Grid.RowDefinitions>
            <RowDefinition x:Uid="RowDefinition_1" Height="24"/>
            <RowDefinition x:Uid="RowDefinition_2" Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="NetworkHeader" FontSize="16" VerticalAlignment="Center" Margin="5,2,0,2" Text="{Binding Header}"></TextBlock>
        <Canvas x:Uid="CV_Inst" x:Name="CV_Inst" Grid.Row="1">
            <Canvas.Resources>
                <Style x:Uid="Style_1" TargetType="{x:Type TextBlock}">
                    <Setter x:Uid="Setter_1" Property="Margin" Value="2,2,0,0"></Setter>
                </Style>
            </Canvas.Resources>
            <Rectangle x:Uid="Cursor" x:Name="Cursor" Stroke="Black" Visibility="Hidden"></Rectangle>
        </Canvas>
    </Grid>
</UserControl>
