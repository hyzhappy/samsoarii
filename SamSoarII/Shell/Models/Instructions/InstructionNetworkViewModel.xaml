<UserControl x:Class="SamSoarII.Shell.Models.InstructionNetworkViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SamSoarII.Shell.Models"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Canvas x:Uid="CV_Main" x:Name="CV_Main">
        <local:LadderExpander x:Name="Expander" VerticalAlignment="Top" IsExpand="True">
            <local:LadderExpander.LayoutTransform>
                <ScaleTransform ScaleX="0.4" ScaleY="0.4"/>
            </local:LadderExpander.LayoutTransform>
        </local:LadderExpander>
        <TextBlock Canvas.Left="28" x:Name="NetworkHeader" FontSize="16" VerticalAlignment="Center" Margin="5,2,0,2" Text="{Binding Header}"></TextBlock>
        <Rectangle x:Name="RN_Wait" Canvas.Left="24" Canvas.Top="26" Panel.ZIndex="3" Width="520" Opacity="0.5" Fill="White" Visibility="Hidden" IsEnabled="False"/>
        <TextBlock x:Name="TB_Wait" Canvas.Left="26" Canvas.Top="28" Panel.ZIndex="4" Visibility="Hidden">点击更新......</TextBlock>
    </Canvas>
</UserControl>
