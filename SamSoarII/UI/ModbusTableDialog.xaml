<Window x:Class="SamSoarII.AppMain.UI.ModbusTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamSoarII.AppMain.UI"
        mc:Ignorable="d"
        Title="建立新的Modbus表格" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <GroupBox Header="表格名称"
                  Grid.Row="0" Grid.Column="0">
            <TextBox x:Name="TB_Name"></TextBox>
        </GroupBox>
        <GroupBox Header="表格注释"
                  Grid.Row="1" Grid.Column="0">
            <TextBox x:Name="TB_Comment"></TextBox>
        </GroupBox>
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="B_Ensure"
                    Grid.Row="0" Grid.Column="0">
                确定
            </Button>
            <Button x:Name="B_Cancel"
                    Grid.Row="0" Grid.Column="1">
                取消
            </Button>
        </Grid>
    </Grid>
</Window>
