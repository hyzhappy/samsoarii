<UserControl x:Class="SamSoarII.AppMain.UI.ReplaceWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SamSoarII.AppMain.UI"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300"
             Background="White">
    <UserControl.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Undo" CanExecute="UndoCanExecute"  Executed="UndoExecuted"/>
        <CommandBinding Command="ApplicationCommands.Redo" CanExecute="RedoCanExecute"  Executed="RedoExecuted"/>
    </UserControl.CommandBindings>
    <UserControl.Resources>
        <Style x:Key="ImageEnable" TargetType="Image">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.3"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="CB_Range"
                      Grid.Row="0" Grid.Column="0"
                      Margin="4,4,4,4"
                      SelectedIndex="{Binding Mode, Mode=TwoWay}">
                <TextBlock>当前程序</TextBlock>
                <TextBlock>所有程序</TextBlock>
                <TextBlock>自定义...</TextBlock>
            </ComboBox>
            <Button ToolTip="撤销" Command="{x:Static ApplicationCommands.Undo}" 
                    Grid.Row="0" Grid.Column="1"
                    Height="24" Width="24">
                <Image Source="/Resources/Image/Undo.png" Style="{StaticResource ResourceKey=ImageEnable}"/>
            </Button>
            <Button ToolTip="重做" Command="{x:Static ApplicationCommands.Redo}" 
                    Grid.Row="0" Grid.Column="2"
                    Height="24" Width="24">
                <Image Source="/Resources/Image/Redo.png" Style="{StaticResource ResourceKey=ImageEnable}"/>
            </Button>
            <Button ToolTip="设置" Click="OnConfigClick"
                    Grid.Row="0" Grid.Column="3"
                    Height="24" Width="24">
                <Image Source="/Resources/Image/SystemSetting.png" Style="{StaticResource ResourceKey=ImageEnable}"/>
            </Button>
        </Grid>
        <Grid x:Name="G_Main" Visibility="Visible"
              Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center" Margin="6,0,0,0"
                   FontSize="14">
            查找：
            </TextBlock>
            <TextBox x:Name="TB_Input"
                 Grid.Row="0" Grid.Column="0"
                 Margin="60,4,4,4"
                 TextChanged="TB_Input_TextChanged"
                 KeyDown="TB_Input_KeyDown">
            </TextBox>
            <TextBlock Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="6,0,0,0"
                   FontSize="14">
            替换：
            </TextBlock>
            <TextBox x:Name="TB_Change"
                 Grid.Row="1" Grid.Column="0"
                 Margin="60,4,4,4"
                 TextChanged="TB_Change_TextChanged"
                 KeyDown="TB_Change_KeyDown">
                <TextBox.CommandBindings>
                    <CommandBinding Command="ApplicationCommands.Undo" CanExecute="UndoCanExecute"  Executed="UndoExecuted"/>
                    <CommandBinding Command="ApplicationCommands.Redo" CanExecute="RedoCanExecute"  Executed="RedoExecuted"/>
                </TextBox.CommandBindings>
            </TextBox>
            <DataGrid x:Name="DG_List" ItemsSource="{Binding Items}"
                  Grid.Row="2" Grid.Column="0"
                  AutoGenerateColumns="False" CanUserResizeColumns="False"
                  RowBackground="White" AlternatingRowBackground="AliceBlue"
                  SelectionChanged="DG_List_SelectionChanged">
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="LightBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontWeight" Value="Heavy"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontWeight" Value="Light"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="DGTC_Detail" IsReadOnly="True" Binding="{Binding Detail}"
                                    Header="元件" Width="*">
                    </DataGridTextColumn>
                    <DataGridTextColumn x:Name="DGTC_Diagram" IsReadOnly="True" Binding="{Binding Diagram}"
                                    Header="程序" Width="80">
                    </DataGridTextColumn>
                    <DataGridTextColumn x:Name="DGTC_Network" IsReadOnly="True" Binding="{Binding Network}"
                                    Header="网络" Width="40">
                    </DataGridTextColumn>
                </DataGrid.Columns>

            </DataGrid>
        </Grid>
        <Grid x:Name="G_Config" Visibility="Hidden"
              Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="32"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="6,0,0,0">
                自定义程序选择：
            </TextBlock>
            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BC_Ensure"
                    Grid.Row="0" Grid.Column="0"
                    Margin="4,4,4,4"
                    Click="BC_Ensure_Click">
                    确定
                </Button>
                <Button x:Name="BC_Cancel"
                    Grid.Row="0" Grid.Column="1"
                    Margin="4,4,4,4"
                    Click="BC_Cancel_Click">
                    取消
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
